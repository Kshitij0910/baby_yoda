<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".SuggestedWorkoutVideosFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SuggestedWorkoutVideosFragment">

        <TextView
            android:id="@+id/yoga_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="YOGA VIDEOS"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/home_workout_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yoga_page"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="HOME WORKOUT VIDEOS"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/hiit_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/abs_page"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"

            android:textSize="24sp"
            android:padding="10dp"
            android:background="@drawable/border"
            android:text="HIGH INTENSITY INTERVAL TRAINING VIDEOS" />

        <TextView
            android:id="@+id/abs_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_workout_page"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="NO EQUIPMENT ABS TRAINING VIDEOS"
            android:layout_margin="15dp"

            android:textSize="24sp"
            android:padding="10dp"
            android:background="@drawable/border"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hiit_page"
            android:layout_margin="10dp">

            <WebView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_below="@id/hiit_page"/>
    </RelativeLayout>

</ScrollView>